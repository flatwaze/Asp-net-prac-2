@using WebStore.DomainNew.Models.BreadCrumbs
@model IEnumerable<BreadCrumbsViewModel>

<div class="breadcrumbs">
    <ol class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li><a asp-controller="Catalog" asp-action="Shop">Каталог</a></li>
        <li class="active">Товар 1</li>
    </ol>
</div>
@foreach (var item in Model)
{
    switch (item.BreadCrumbsType)
    {
        default: throw new ArgumentOutOfRangeException();

        case BreadCrumbsType.None: break;

        case BreadCrumbsType.Category:
            <li class="active">
                <a asp-controller="Catalog"
                   asp-action="Shop"
                   asp-route-SectionId="@item.Id">
                    @item.Name
                </a>
            </li>
            break;

        case BreadCrumbsType.Brand:
            <li class="active">
                <a asp-controller="Catalog"
                   asp-action="Shop"
                   asp-route-BrandId="@item.Id">
                    @item.Name
                </a>
            </li>
            break;

        case BreadCrumbsType.Product:
            <li class="active">@item.Name</li>
            break;
    }
}